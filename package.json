{
  "name": "justice-ui",
  "version": "0.0.1-beta.0",
  "description": "A UI Components Library for Vue",
  "main": "lib/index.js",
  "module": "es/index.js",
  "style": "lib/index.css",
  "typings": "types/index.d.ts",
  "files": [
    "es",
    "lib",
    "types"
  ],
  "scripts": {
    "bootstrap": "npm i",
    "dev": "npm run build:entry && webpack-dev-server --config build/webpack.dev.js",
    "lint": "eslint ./packages --ext .js,.vue,.ts,.tsx && stylelint \"packages/**/*.scss\" --fix",
    "build:entry": "node build/build-entry.js",
    "build:changelog": "vant-doc changelog ./docs/markdown/changelog.generated.md --tag 0.0.1",
    "build:lib": "node build/build-lib.js",
    "build:site": "rm -rf docs/dist && cross-env NODE_ENV=production webpack --config build/webpack.doc.js && gh-pages -d docs/dist --add",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:clear-cache": "jest --clearCache",
    "test:coverage": "open test/coverage/index.html"
  },
  "husky": {
    "hooks": {
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,vue}": [
      "eslint",
      "git add"
    ],
    "*.{vue,css}": [
      "stylelint",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:dida-fe/justice-ui.git"
  },
  "keywords": [
    "vue",
    "component"
  ],
  "author": "dida-fe",
  "license": "MIT",
  "dependencies": {
    "@babel/runtime": "^7.4.5",
    "@vue/babel-helper-vue-jsx-merge-props": "^1.0.0",
    "vue-lazyload": "1.2.6"
  },
  "peerDependencies": {
    "vue": ">= 2.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-jsx": "^7.2.0",
    "@babel/plugin-transform-object-assign": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.15",
    "@vant/doc": "^2.3.2",
    "@vant/markdown-loader": "^2.0.0",
    "@vant/touch-emulator": "^1.0.0",
    "@vue/babel-preset-jsx": "^1.0.0",
    "@vue/server-test-utils": "^1.0.0-beta.29",
    "@vue/test-utils": "^1.0.0-beta.29",
    "autoprefixer": "^9.6.0",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "codecov": "^3.5.0",
    "cross-env": "^5.2.0",
    "css-loader": "^3.0.0",
    "csso": "^3.5.1",
    "dependency-tree": "^7.0.2",
    "eslint": "^5.16.0",
    "eslint-config-didafe": "0.0.1-beta.2",
    "eslint-plugin-vue": "^5.2.2",
    "fast-glob": "^3.0.0",
    "gh-pages": "^2.0.1",
    "html-webpack-plugin": "3.2.0",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "jest-serializer-vue": "^2.0.2",
    "lint-staged": "^8.2.1",
    "node-sass": "^4.12.0",
    "postcss": "^7.0.17",
    "postcss-loader": "^3.0.0",
    "progress-bar-webpack-plugin": "^1.12.1",
    "sass-loader": "^7.1.0",
    "shelljs": "^0.8.3",
    "signale": "^1.4.0",
    "style-loader": "^0.23.1",
    "stylelint": "^10.1.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-order": "^3.0.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.2",
    "uppercamelcase": "^3.0.0",
    "url-loader": "^2.0.0",
    "vue": "2.6.10",
    "vue-jest": "4.0.0-beta.1",
    "vue-loader": "^15.7.0",
    "vue-router": "^3.0.6",
    "vue-server-renderer": "^2.6.10",
    "vue-template-compiler": "2.6.10",
    "vue-template-es2015-compiler": "^1.9.1",
    "webpack": "4.35.0",
    "webpack-cli": "^3.3.5",
    "webpack-dev-server": "3.7.2"
  },
  "sideEffects": [
    "es/**/style/*",
    "lib/**/style/*",
    "*.css",
    "*.scss"
  ]
}
